<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="0">
        <record id="shopping_cart_security_category" model="ir.module.category">
            <field name="name">Shopping Cart Security</field>
            <field name="description">Helps you manage Shopping Cart Security</field>
            <field name="sequence">100</field>
        </record>

        <record id="group_shopping_cart_security_client" model="res.groups">
            <field name="name">Client</field>
            <field name="category_id" ref="shopping_cart_security_category"/>
            <field name="comment">Can buy inventory products</field>
        </record>

        <record id="group_shopping_cart_security_general" model="res.groups">
            <field name="name">General</field>
            <field name="category_id" ref="shopping_cart_security_category"/>
            <field name="implied_ids" eval="[(4,ref('group_shopping_cart_security_client'))]"/>
            <field name="comment">Can create inventory products</field>
            <field name="users" eval="[(4,ref('base.user_admin'))]"/>
        </record>

    </data>
</odoo>