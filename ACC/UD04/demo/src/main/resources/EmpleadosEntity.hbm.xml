<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="entity.EmpleadosEntity" table="empleados" schema="ejemplo">
        <id name="empNo" column="emp_no"/>
        <property name="apellido" column="apellido"/>
        <property name="oficio" column="oficio"/>
        <property name="dir" column="dir"/>
        <property name="fechaAlta" column="fecha_alta"/>
        <property name="salario" column="salario"/>
        <property name="comision" column="comision"/>
        <many-to-one name="departamentosByDeptNo" class="entity.DepartamentosEntity">
            <column name="dept_no" not-null="true"/>
        </many-to-one>
    </class>
</hibernate-mapping>