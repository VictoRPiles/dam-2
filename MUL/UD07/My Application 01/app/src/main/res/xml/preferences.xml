<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Category 1 -->
    <PreferenceCategory
            android:title="Category 1">
        <CheckBoxPreference
                android:key="singleOperatingSystem"
                android:title="Single operating system"
                android:summary="Mark if you have a preference for a single OS"/>
    </PreferenceCategory>
    <!-- Category 2 -->
    <PreferenceCategory
            android:title="Category 2">
        <ListPreference
                android:key="os"
                android:title="Operating system"
                android:summary="Choose an operating system"
                android:entries="@array/os_values"
                android:entryValues="@array/os_keys"/>
        <EditTextPreference
                android:key="version"
                android:title="System version"
                android:summary="Enter system version"
                android:inputType="number"
                android:dialogTitle="Enter system version"
                android:selectAllOnFocus="true"/>
    </PreferenceCategory>
</PreferenceScreen>
